<% include partials/header %>
<!-- <% include partials/navbar %> -->
    <center><h4 class="display-4">IP Lookup</h4></center>

    <% if(errors)
    {
         errors.forEach(function(error)
        { %>
            <div class="alert alert-danger" role="alert"><%= error.msg %> </div>
        <% })
    } %>

    <center>
    <div class="card" style="width: 25rem;">
        <form method="POST" action="/lookup">
            <div class="form-group" style="width: 19rem;">
                <label>Enter IP</label> <br />
                <input type="text" name="ip" class="form-control">

            </div>
        
            <center><input type="submit" value="submit" class="btn btn-dark"></center>

        </form>
    </div>
</center>

    <center><h4 class="display-4"><%= title %></h4></center>
    <center><div class="card" style="width: 50rem;">
        <table class="table table-striped table-dark" id="table" >
            <thead>
                <tr>
                    <th scope="col">IP                     </th>
                    <th scope="col">Hostname               </th>
                    <th scope="col">City                   </th>
                    <th scope="col">Region                 </th>
                    <th scope="col">Country                </th>
                    <th scope="col">Location               </th>
                    <th scope="col">ASN & Organization     </th>

                </tr>
            </thead>
             <tbody>
                 
                        <tr>
                            <td><%= results.ip              %></td>
                            <td><%= results.hostname        %></td>
                            <td><%= results.city            %></td>
                            <td><%= results.region          %></td>
                            <td><%= results.country         %></td>
                            <td><%= results.loc             %></td>
                            <td><%= results.org             %></td>
                        </tr>
             </tbody>
        </table>
    </div></center>
<% include partials/footer %>
